---
import type { Video } from '../data/videos';

interface Props {
  video: Video;
}

const { video } = Astro.props;
const { title, youtubeId, speaker, complexity, topics, description } = video;

const complexityColors = {
  beginner: 'bg-green-500',
  intermediate: 'bg-yellow-500',
  advanced: 'bg-red-500'
};

const complexityLabels = {
  beginner: 'Principiante',
  intermediate: 'Intermedio',
  advanced: 'Avanzado'
};
---

<div 
  class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow cursor-pointer" 
  data-complexity={complexity} 
  data-category={video.category}
  data-youtube-id={youtubeId}
  data-title={title}
>
  <div class="relative bg-gray-200">
    <img 
      src={`https://img.youtube.com/vi/${video.youtubeId}/hqdefault.jpg`}
      alt={video.title}
      class="w-full h-48 object-cover block"
    />
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
      <div class="bg-white bg-opacity-90 rounded-full p-3 hover:bg-opacity-100 transition-all">
        <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20" style="color: #f74c00;">
          <path d="M6.3 2.841A1.5 1.5 0 004 4.11V15.89a1.5 1.5 0 002.3 1.269l9.344-5.89a1.5 1.5 0 000-2.538L6.3 2.84z"/>
        </svg>
      </div>
    </div>
  </div>
  
  <div class="p-3 border-t-2" style="border-color: #f74c00;">
    <div class="mb-2">
      <span class={`px-2 py-1 rounded text-xs font-medium text-white ${complexityColors[complexity]} mb-2 inline-block`}>
        {complexityLabels[complexity]}
      </span>
    </div>
    
    <h3 class="text-base font-semibold text-gray-900">{title}</h3>
    
    <div class="text-gray-600 text-xs">
      <p>Por: {speaker}</p>
    </div>
  </div>
</div>